extend base.pug

block scripts 
block style 
    style 
        include ../static/css/style.css 
        include ../static/css/stylecontact.css
    <link href='https://fonts.googleapis.com/css?family=Press Start 2P' rel='stylesheet'>
block content 
    section#contact 
        h1 Contact Us 
        form(action="/contact" method='POST' id='form2')
            div#name 
                label(for='name') Name:
                input(type='text' id='name' name='name' placeholder='Type your Name')
            div#email 
                label(for='email') Email:
                input(type='email' id='email' name='email' placeholder='Type your email')
            div#age 
                label(for='num1') Age:
                input(type='number' id='age' name='age' placeholder='Enter age')
            div#Message 
                label(for name='message') Message:
                textarea(name='message' id='mes' placeholder=' Enter your message' cols='30' row=' 30')
            button(id='btn4') Submit
